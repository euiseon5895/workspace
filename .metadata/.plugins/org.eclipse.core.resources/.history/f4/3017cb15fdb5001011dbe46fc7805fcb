package chOmok;

import java.util.Scanner;

public class Omok {
	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		Player user = new Player("사용자", "O");
		Player computer = new Player("컴퓨터", "X");
		Board board = new Board(19);

		play(board, user, computer);
	}

	private static void play(Board board, Player user, Player computer) {
		board.print();
		boolean isStop = false;
		int turn = 1;

		while (isStop) {
			Scanner sc = new Scanner(System.in);

			// 1 좌표 입력
			int x = sc.nextInt();

			// 오목
			board.print();
		}

	}

	boolean Ocheck(Board board, String stone, int x, int y) {
		int cnt = 0;
		for (int row = 0; row < board.size; row++) {

			if (board.map[row][y].equals(stone)) {
				cnt++;
				if (cnt == 5) {
					return true;
				}

			} else {
				cnt = 0;
			}
		}

		cnt = 0; // 초기화

		for (int col = 0; col < board.size; col++) {

			if (board.map[x][col].equals(stone)) {
				cnt++;
				if (cnt == 5) {
					return true;
				}

			} else {
				cnt = 0;
			}
		}

		cnt = 0;
		
		// 대각선 검사
		
		if(x+y<board.size) {
			int startCol= x+y-1;
			int startRow = 0;
			

			int num = startCol+startRow+1;
			for(int i=0;i<num;i++) {
				
				if(board.map[startRow++][startCol--].equals(stone)) {
					cnt++;
					if (cnt == 5) {
						return true;
					}
				}else {
					cnt = 0;
				}
				
			}		
		}else {
			int startCol = (board.size-1);
			int startRow = (x+y) - startCol;
			
			int num = startCol - startRow +1;
			for(int i=0;i<num;i++) {
				
				if(board.map[startRow++][startCol--].equals(stone)) {
					cnt++;
					if (cnt == 5) {
						return true;
					}
				}else {
					cnt = 0;
				}
			}
			
			
			
			
			
		}
		
		
		
		
		
		
		
		
		
		
		
		return false;
	}

}